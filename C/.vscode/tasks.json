{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-finput-charset=utf-8",
                "-I",
                "${fileDirname}\\include",
                "-Wall",
                "-m64",
                "-fexec-charset=utf-8",
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\executables\\${fileBasenameNoExtension}.exe"
            ],
            "type": "process",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 建置使用中檔案",
            "command": "C:\\_APP\\TDM-GCC\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-finput-charset=utf-8",
                "-I",
                "${fileDirname}\\include",
                "-Wall",
                "-m64",
                "-fexec-charset=utf-8",
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\executables\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        }
    ]
}